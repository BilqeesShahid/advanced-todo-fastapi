# Phase III Environment Configuration

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/todo_db

# Cohere AI (recommended for better chatbot responses)
COHERE_API_KEY=your-cohere-api-key-here
COHERE_MODEL=command-a-03-2025
COHERE_TEMPERATURE=0.7

# Fallback OpenAI (if Cohere not available)
OPENAI_API_KEY=sk-...
OPENAI_MODEL=gpt-4
OPENAI_TEMPERATURE=0.7
OPENAI_MAX_TOKENS=500

# Authentication (Better Auth)
JWT_SECRET=your-jwt-secret-here-change-in-production
JWT_ALGORITHM=HS256
BETTER_AUTH_URL=http://localhost:3000

# Application
ENV=development
LOG_LEVEL=INFO

# MCP Server (if separate process)
MCP_SERVER_PORT=8001
MCP_SERVER_NAME=todo-mcp-server
